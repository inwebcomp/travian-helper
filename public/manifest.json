{
  "name": "Travian Helper",
  "description": "Travian tool for simplify game process",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.travian.com/*"],
      "js": ["/js/insertion.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "/favicon.png"
    }
  },
  "icons": {
    "128": "/favicon.png"
  }
}
